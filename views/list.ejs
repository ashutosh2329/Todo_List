
<%- include("header"); -%>
<div class="box" id="heading">
	<h1><%= titleList %></h1>
</div>
       <div class="box">

         	<% itemList.forEach(function(item){ %>
            <form action="/delete" method="POST">
         	<div class="item">
         		<input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
         	<p><%= item.name %></p>
         </div>
         <input type="hidden" name="listTitle" value="<%= titleList %>"></input>
     </form>
         <% }) %>
         <form class="item" action="/" method="POST">
		<input type="text" name="work" placeholder="New item" autocomplete="off">
		<button type="submit" name="Button" value="<%= titleList %>">+</button>
	</form>
     </div>
         
<%- include("footer"); -%>

